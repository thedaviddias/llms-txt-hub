{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "analyze": "ANALYZE=true pnpm build",
    "build": "NODE_NO_WARNINGS=1 next build --debug",
    "clean": "git clean -xdf .cache .turbo .next coverage node_modules",
    "dev": "NODE_OPTIONS='--inspect' next dev --turbo --port 3000",
    "lint": "biome check --write",
    "start": "next start",
    "test": "jest",
    "test:api": "jest --testPathPattern=/__tests__/api/",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=/__tests__/integration/",
    "test:related": "jest --findRelatedTests --passWithNoTests --bail --maxWorkers=50%",
    "test:unit": "jest --testPathPattern=/__tests__/lib/ --testPathPattern=/__tests__/utils/",
    "test:update-snapshots": "jest -u",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
