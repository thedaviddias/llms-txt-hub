{
  "name": "e2e",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "report": "playwright show-report",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --config=playwright.config.ci.ts",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:fast": "playwright test --project=chromium",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:smoke": "playwright test tests/smoke.spec.ts --project=chromium",
    "test:e2e:ui": "playwright test --ui",
    "test:install": "playwright install chromium"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2"
  }
}
