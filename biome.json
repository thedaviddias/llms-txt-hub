{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/dist",
      "!**/build",
      "!**/node_modules",
      "!**/.next",
      "!**/.turbo",
      "!**/coverage",
      "!**/.content-collections"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "attributePosition": "auto"
  },
  "linter": {
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedFunctionParameters": "off",
        "useExhaustiveDependencies": "off",
        "useJsxKeyInIterable": "off",
        "useUniqueElementIds": "off"
      },
      "performance": {
        "noImgElement": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useConst": "off",
        "noUselessElse": "off",
        "noParameterAssign": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noImplicitAnyLet": "off",
        "noUnknownAtRules": "off",
        "useIterableCallbackReturn": "off"
      },
      "complexity": {
        "noBannedTypes": "off",
        "noForEach": "off",
        "noImportantStyles": "off"
      },
      "a11y": {
        "useSemanticElements": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "trailingCommas": "none",
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    },
    "jsxRuntime": "reactClassic"
  }
}
