{
  "name": "@thedaviddias/newsletter",
  "version": "1.0.0",
  "description": "Universal newsletter subscription package supporting multiple providers",
  "keywords": [
    "newsletter",
    "email",
    "subscription",
    "mailerlite",
    "convertkit",
    "substack"
  ],
  "license": "MIT",
  "author": "David Dias <thedaviddias@gmail.com> (https://thedaviddias.dev/)",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./keys": {
      "types": "./dist/keys.d.ts",
      "import": "./dist/keys.mjs",
      "require": "./dist/keys.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.7.0",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@thedaviddias/logging": "workspace:*",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.17",
    "tsup": "^8.0.1",
    "typescript": "^5.8.2"
  }
}